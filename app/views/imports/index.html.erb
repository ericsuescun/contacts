<div class="container">
	<div class="row">
		<div class="col-12">
			<h4>Import</h4>
			<%= form_tag import_imports_path, multipart: true do %>
			  <%= file_field_tag :file %>
			  <%= submit_tag "Import CSV" %>
			<% end %>
		</div>
		<div class="col-12">
			<%= form_tag(fix_header_contacts_path, method: :put) do %>
			<table class="table table-striped">
				<thead>
					
					<%= submit_tag "Asign fields for contacts and save", class: "btn btn-primary my-3" %>
					<tr>
						<th></th>
						<th>
							<%= label_tag "Field 1" %>
							<%= select_tag(:field1, options_for_select([['Name', 'name'], ['Birthdate', 'birth_date'], ['Tel', 'tel'], ['Address', 'address'], ['Cred Card', 'credit_card'], ['Franchise', 'franchise'], ['Email', 'email']], nil), class: "form-control input") %>
								
						</th>
						<th>
							<%= label_tag "Field 2" %>
							<%= select_tag(:field2, options_for_select([['Birthdate', 'birth_date'], ['Name', 'name'], ['Tel', 'tel'], ['Address', 'address'], ['Cred Card', 'credit_card'], ['Franchise', 'franchise'], ['Email', 'email']], nil), class: "form-control input") %>
								
						</th>
						<th>
							<%= label_tag "Field 3" %>
							<%= select_tag(:field3, options_for_select([['Tel', 'tel'], ['Name', 'name'], ['Birthdate', 'birth_date'], ['Address', 'address'], ['Cred Card', 'credit_card'], ['Franchise', 'franchise'], ['Email', 'email']], nil), class: "form-control input") %>
								
						</th>
						<th>
							<%= label_tag "Field 4" %>
							<%= select_tag(:field4, options_for_select([['Address', 'address'], ['Name', 'name'], ['Birthdate', 'birth_date'], ['Tel', 'tel'], ['Cred Card', 'credit_card'], ['Franchise', 'franchise'], ['Email', 'email']], nil), class: "form-control input") %>
								
						</th>
						<th>
							<%= label_tag "Field 5" %>
							<%= select_tag(:field5, options_for_select([['Cred Card', 'credit_card'], ['Name', 'name'], ['Birthdate', 'birth_date'], ['Tel', 'tel'], ['Address', 'address'], ['Franchise', 'franchise'], ['Email', 'email']], nil), class: "form-control input") %>
								
						</th>
						
						<th>
							<%= label_tag "Field 6" %>
							<%= select_tag(:field6, options_for_select([['Email', 'email'], ['Name', 'name'], ['Birthdate', 'birth_date'], ['Tel', 'tel'], ['Address', 'address'], ['Cred Card', 'credit_card'], ['Franchise', 'franchise']], nil), class: "form-control input") %>
								
						</th>
						<th>Errors</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @imports.each do |import| %>
						<tr>
							<td><%= check_box_tag "imports_ids[]", import.id, checked: true %></td>
							<td><%= import.name %></td>
							<td><%= import.birth_date %></td>
							<td><%= import.tel %></td>
							<td><%= import.address %></td>
							<td><%= import.credit_card %></td>
							<td><%= import.email %></td>
							<td><%= import.import_errors %></td>
							<td><%= link_to 'Delete', import, method: :delete, data: { confirm: 'Â¿Confirm deletion?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<% end %>
		</div>
	</div>
</div>
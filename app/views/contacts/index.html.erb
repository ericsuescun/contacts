<div class="container">
	<div class="row">
		<div class="col-12">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Birth</th>
						<th>Tel</th>
						<th>Address</th>
						<th>Cred Card</th>
						<th>Franchise</th>
						<th>Email</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @contacts.each do |contact| %>
						<tr>
							<td><%= contact.name %></td>
							<td><%= contact.birth_date %></td>
							<td><%= contact.tel %></td>
							<td><%= contact.address %></td>
							<td>***-<%= contact.credit_card[-4..-1] %></td>
							<td><%= contact.franchise %></td>
							<td><%= contact.email %></td>
							<td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Â¿Confirm deletion?' } %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2><%= @contact.errors.count %> error(es) impidieron que este registro fuera guardado:</h2>

    <ul>
    <% @contact.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @contact do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-4 col-xl-4 mx-auto">
        <div class="form-group">
          <%= form.label "Name" %>
          <%= form.text_field :name, class: "form-control form-control input" %>
        </div>
        <div class="form-group">
          <%= form.label "Birth date" %>
          <%= form.text_field :birth_date, class: "form-control input"  %>
        </div>
        <div class="form-group">
          <%= form.label "Tel" %>
          <%= form.text_field :tel, class: "form-control input"  %>
        </div>
        <div class="form-group">
          <%= form.label "Address" %>
          <%= form.text_field :address, class: "form-control input"  %>
        </div>
        <div class="form-group">
          <%= form.label "Credit Card" %>
          <%= form.text_field :credit_card, class: "form-control input"  %>
        </div>
        <div class="form-group">
          <%= form.label "Email" %>
          <%= form.text_field :email, class: "form-control input"  %>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-12 col-xl-4 mx-auto">
        <div class="actions">
          <%= form.submit "Save", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>